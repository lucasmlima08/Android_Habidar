<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main"
    android:background="@drawable/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.8">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="8"></RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView"
                android:layout_weight="1"
                android:src="@drawable/logo" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="8"></RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="4"></RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/bPlayGame"
                    android:id="@+id/play"
                    android:layout_weight="1"
                    android:background="@drawable/theme_buttons_white_and_gray"
                    android:onClick="eventsMain"
                    android:clickable="true"
                    android:textSize="@dimen/buttons"
                    android:textColor="@color/color_text_buttons" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.2"></RelativeLayout>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/bSettings"
                    android:id="@+id/settings"
                    android:layout_weight="1"
                    android:background="@drawable/theme_buttons_white_and_gray"
                    android:clickable="true"
                    android:textSize="@dimen/buttons"
                    android:textColor="@color/color_text_buttons"
                    android:onClick="eventsMain" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.2"></RelativeLayout>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/bRecords"
                    android:id="@+id/records"
                    android:layout_weight="1"
                    android:background="@drawable/theme_buttons_white_and_gray"
                    android:clickable="true"
                    android:textSize="@dimen/buttons"
                    android:textColor="@color/color_text_buttons"
                    android:onClick="eventsMain" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.2" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/bInstructions"
                    android:id="@+id/instructions"
                    android:layout_weight="1"
                    android:background="@drawable/theme_buttons_white_and_gray"
                    android:clickable="true"
                    android:textSize="@dimen/buttons"
                    android:textColor="@color/color_text_buttons"
                    android:onClick="eventsMain" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.2" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="4"></RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2.1">
            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/banner"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                ads:adUnitId="ca-app-pub-1148127483617292/2005959368"
                ads:adSize="SMART_BANNER" />
            </LinearLayout>
    </LinearLayout>
</RelativeLayout>
